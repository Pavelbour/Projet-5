{% extends 'base.html.twig' %}

{% block title %}Liste d'objectifs{% endblock %}

{% block body %}
    <h1>Objectifs pour les appareils photo</h1>
    <div class="row">
        {% for lens in list %}
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ lens.manufacturer.manufacturer ~ " " ~ lens.name }}
                        </h5>
                        <p class="card-text">
                            {{ lens.description }}
                        </p>
                        <a class="btn btn-warning" href="{{ path('app_lens', { 'id': lens.id }) }}">
                            En savoir plus
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row justify-content-end mt-2">
        <nav class="col-2">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="{{ path('app_cameras_page', { 'id': 1 }) }}"><span>&laquo;</span></a><li>
                <li class="page-item"><a class="page-link" href="{{ path('app_cameras_page', { 'id': ( id - 1 )}) }}">{{ (id - 1) }}</a><li>
                <li class="page-item"><a class="page-link" href="{{ path('app_cameras_page', { 'id': id }) }}">{{ id }}</a><li>
                <li class="page-item"><a class="page-link" href="{{ path('app_cameras_page', { 'id': ( id + 1) }) }}">{{ (id + 1) }}</a><li>
                <li class="page-item"><a class="page-link"><span>&raquo;<span></a></li>
            </ul>
        </nav>
    </div>
{% endblock %}

{% block menu %}
    <a class="nav-link text-warning" href="{{ path('app_add_new_lens_manufacturer') }}">Ajouter un nouveau fabricant d'objectifs</a>
    <a class="nav-link text-warning" href="{{ path('app_add_new_lens') }}">Ajouter un nouveau objectif</a>
{% endblock %}