{% extends 'base.html.twig' %}

{% block title %}Bienvenu sur CaméraDatabase{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="col-12">CaméraDatabase</h1>
    </div>
    <div class="row border-bottom mb-2">
        <h3 class="col-12">Les derniers appareils</h3>
    </div>
    <div class="row">
        {% for camera in cameras %}
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    {% if camera.image != "" %}
                        <img class="card-img-top" src="{{ asset('img/' ~ camera.image) }}" />
                    {% else %}
                        <p class="card-text">Pas d'image</p>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="cart-title">{{ camera.manufacturer.manufacturer ~ " " ~ camera.CameraName }}</h5>
                        <p class="card-text">{{ camera.description }}</p>
                        <a href="{{ path('app_camera', { 'id': camera.id }) }}" class="btn btn-warning">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row border-bottom mb-2">
        <h3 class="col-12">Les derniers objectifs</h3>
    </div>
    <div class="row mb-5">
        {% for lens in lenses %}
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    {% if lens.image != "" %}
                        <img class="card-img-top" src="{{ asset('img/' ~ lens.image) }}" />
                    {% else %}
                        <p class="card-text">Pas d'image</p>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ lens.manufacturer.manufacturer ~ " " ~ lens.name }}
                        </h5>
                        <p class="card-text">
                            {{ lens.description }}
                        </p>
                        <a class="btn btn-warning" href="{{ path('app_lens', { 'id': lens.id }) }}">
                            En savoir plus
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}